#!/bin/bash

echo "Choose a path P for installing binaries and documentation"
echo "  o binaries will be copied in \${P}/bin"
echo "  o documentation in \${P}/share/doc"
echo "    etc ..."
echo
PREFIX=${HOME}/usr
read -p "Prefix path for installation [${PREFIX}]: " ANSWER
if [ "${ANSWER}" != "" ]; then PREFIX=${ANSWER}; fi
echo "PREFIX=${PREFIX}" >> build.config
echo "BINDIR=${PREFIX}/bin"   >> build.config
echo "LIBDIR=${PREFIX}/lib64" >> build.config
